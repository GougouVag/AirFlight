<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nonStopLayoutID">

    <TextView
        android:text="Non stop"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView13" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/okID"
        android:layout_below="@+id/yesID"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NoID"
        android:layout_below="@+id/textView13"
        android:layout_toRightOf="@+id/okID"
        android:layout_toEndOf="@+id/okID" />

    <RadioButton
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yesID"
        android:layout_below="@+id/textView13"
        android:layout_toLeftOf="@+id/okID"
        android:layout_toStartOf="@+id/okID" />
</RelativeLayout>